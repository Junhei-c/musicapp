<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/widgetRoot"
    android:layout_width="match_parent"
    android:layout_height="@dimen/widget_height"
    android:layout_margin="@dimen/widget_margin"
    android:padding="@dimen/widget_padding"
    android:background="@drawable/widget_card_bg">

    <ImageView
        android:id="@+id/widgetAlbumArt"
        android:layout_width="@dimen/widget_albumart_size"
        android:layout_height="@dimen/widget_albumart_size"
        android:layout_alignParentStart="true"
        android:layout_marginStart="@dimen/widget_albumart_margin"
        android:layout_marginTop="@dimen/widget_albumart_margin_top"
        android:src="@drawable/ic_launcher_foreground"
        android:contentDescription="@string/song_icon" />

    <LinearLayout
        android:id="@+id/textContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/widgetAlbumArt"
        android:layout_marginStart="@dimen/widget_text_margin_start"
        android:layout_marginTop="@dimen/widget_text_margin_top"
        android:orientation="vertical">

        <TextView
            android:id="@+id/widgetSongTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/widget_song_title"
            android:textColor="@android:color/white"
            android:textSize="@dimen/widget_song_title_size"
            android:textStyle="bold"
            android:maxLines="1"
            android:ellipsize="end" />

        <TextView
            android:id="@+id/widgetArtist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/widget_artist_margin_top"
            android:text="@string/widget_artist"
            android:textColor="@android:color/white"
            android:textSize="@dimen/widget_artist_text_size"
            android:maxLines="1"
            android:ellipsize="end" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/widgetControls"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/widget_controls_margin_bottom"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/widgetPrev"
            android:layout_width="@dimen/widget_control_button_size"
            android:layout_height="@dimen/widget_control_button_size"
            android:background="@android:color/transparent"
            android:src="@drawable/prev"
            android:contentDescription="@string/widget_prev_desc" />

        <ImageButton
            android:id="@+id/widgetPlay"
            android:layout_width="@dimen/widget_control_button_size"
            android:layout_height="@dimen/widget_control_button_size"
            android:background="@android:color/transparent"
            android:src="@drawable/bigplay"
            android:contentDescription="@string/widget_play_desc"
            android:layout_marginStart="@dimen/widget_control_spacing"
            android:layout_marginEnd="@dimen/widget_control_spacing" />

        <ImageButton
            android:id="@+id/widgetNext"
            android:layout_width="@dimen/widget_control_button_size"
            android:layout_height="@dimen/widget_control_button_size"
            android:background="@android:color/transparent"
            android:src="@drawable/next"
            android:contentDescription="@string/widget_next_desc" />
    </LinearLayout>


    <ImageButton
        android:id="@+id/heart"
        android:layout_width="@dimen/widget_control_button_size"
        android:layout_height="@dimen/widget_control_button_size"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="@dimen/widget_albumart_margin_top"
        android:layout_marginEnd="@dimen/widget_albumart_margin"
        android:background="@android:color/transparent"
        android:src="@drawable/heart"
        android:contentDescription="@string/widget_next_desc" />

</RelativeLayout>





















